<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.account.ChildCatsActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <!-- 标题栏 -->
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#30d94c">
        
	    <ImageView 
	        android:id="@+id/childCats_tag_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/tag_back"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:paddingTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"/>
        <TextView 
            android:id="@+id/childCats_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    
	<com.caibo.weidu.modle.PagerSlidingTabStrip
	    android:id="@+id/tabs"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    app:pstsIndicatorColor="#30da4c"
	    app:pstsIndicatorHeight="3dp"
	    app:pstsShouldExpand="true"
	    app:mySelectedTabTextColor="#45bf48"
	    app:mySelectedTabTextSize="18sp" />"
	
	<android.support.v4.view.ViewPager
	    android:id="@+id/viewPager"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />    

</LinearLayout>
