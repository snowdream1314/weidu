<ScrollView 
    android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:tools="http://schemas.android.com/tools">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.caibo.weidu.activity.SubscribeActivity" >

    <!-- 标题栏 -->
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#30d94c">
        
	    <ImageView 
	        android:id="@+id/subscribe_tag_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/tag_back"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:paddingTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginTop="5dp"/>
        <TextView 
            android:id="@+id/aboutUs_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="订阅"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>
    
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="* 您可以在微信中订阅该公众号"
	    android:layout_marginTop="30dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:textColor="#989898"
	    android:textSize="16sp" />
	<TextView 
	    android:id="@+id/subscribe_tip"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:textSize="14sp" />
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:layout_margin="10dp"
	    android:orientation="horizontal">
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/open_wx_icon"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@drawable/openwx_select" />
	        <TextView
	            android:id="@+id/openwx_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="打开微信"
	            android:textColor="#64de4c" />
	            
	    </LinearLayout>
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="7dp"
	        android:background="@drawable/subscribe_row"
	        android:layout_gravity="center"/>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/contacts_icon"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@drawable/contacts_icon" />
	        <TextView
	            android:id="@+id/contacts_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="通讯录"
	            android:textColor="#515151" />
	            
	    </LinearLayout>
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="7dp"
	        android:background="@drawable/subscribe_row"
	        android:layout_gravity="center"/>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/add_friends_icon"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@drawable/add_friends_icon" />
	        <TextView
	            android:id="@+id/addfriends_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="添加朋友"
	            android:textColor="#515151" />
	            
	    </LinearLayout>
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="7dp"
	        android:background="@drawable/subscribe_row"
	        android:layout_gravity="center"/>
	    
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <ImageView
	            android:id="@+id/subscribe_icon"
	            android:layout_width="60dp"
	            android:layout_height="60dp"
	            android:background="@drawable/subscribe_icon" />
	        <TextView
	            android:id="@+id/subscribe_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:text="订阅"
	            android:textColor="#515151" />
	            
	    </LinearLayout>
	    
	</LinearLayout>
	
	<ImageView 
	    android:id="@+id/subscribe_selectedImg"
	    android:layout_width="300dp"
	    android:layout_height="300dp"
	    android:layout_gravity="center"
	    android:background="@drawable/open_wx"/>
	
	<Button 
	    android:id="@+id/subscribe_openwx"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="10dp"
	    android:background="@drawable/rectangle_button"
	    android:layout_marginTop="20dp"
	    android:text="打开微信"
	    android:textColor="#ffffff"
	    android:textSize="18sp"/>

</LinearLayout>
</ScrollView>
