<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/listview_item"
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingBottom="5dp"
	        android:layout_marginBottom="10dp"
	        android:orientation="horizontal">
	        
			<TextView 
		        android:id="@+id/account_category"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="15dp"
		        android:layout_marginTop="15dp"
		        android:textSize="15sp" />
			
			<RelativeLayout 
			    android:id="@+id/category_tab"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="15dp"
		        android:layout_gravity="bottom"
		        android:layout_marginLeft="5dp"
		        android:orientation="vertical">
		        
			   <ImageView 
			       android:id="@+id/tab_image"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_margin="5dp"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/tab"/>
			    
			   <View 
			       android:id="@+id/tab_line"
			       android:layout_width="match_parent"
			       android:layout_height="1dp"
			       android:background="#d4d4d4"
			       android:layout_alignParentBottom="true"/>
			    
			</RelativeLayout>
			
	    </LinearLayout>
		
		<!-- android:listSelector="#00000000" // 去除选中时的底色-->
		<!-- android:numColumns="4" //控制列数为4 -->
		<!-- android:columnWidth="90dp" //每列的宽度，也就是Item的宽度 -->
		<!-- android:stretchMode="columnWidth" //缩放与列宽大小同步 -->
		<!-- android:verticalSpacing="2dp" //两行之间的边距-->
		<!-- android:horizontalSpacing="2dp" //两列之间的边距-->
		     
		<com.caibo.weidu.modle.NoScrollGridView
		    android:id="@+id/account_gridView"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_marginBottom="15dp"
		    android:layout_marginRight="10dp"
		    android:verticalSpacing="10dp"
		    android:horizontalSpacing="2dp"
		    android:layout_gravity="center"
		    android:gravity="center"
		    android:listSelector="#00000000"	
		    android:numColumns="4" />
	</LinearLayout>
	
	<View
        android:id="@+id/wave_line"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/wave_line" />
	    
	
</LinearLayout>
