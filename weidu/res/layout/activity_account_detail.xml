<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caibo.weidu.activity.AccountDetailActivity" >

    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical">
	    
        <!-- 标题栏 -->
		<RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:background="#30d94c">
	        
		    <ImageView 
		        android:id="@+id/tag_back"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/tag_back"
		        android:layout_gravity="center"
		        android:gravity="center"
		        android:paddingTop="10dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"/>
	        <TextView 
	            android:id="@+id/tab_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="#fff"
	            android:textSize="18sp" />
	    </RelativeLayout>
		
		<!-- 公众号详情 -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
	        
	        <ImageView 
	            android:id="@+id/account_img"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:paddingLeft="15dp"
	            android:layout_margin="15dp"/>
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:layout_marginBottom="15dp"
	            android:layout_gravity="center"
	            android:orientation="vertical">
		        
	            <TextView
	                android:id="@+id/account_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="6dp"
	                android:textColor = "#000000"
	                android:textSize="18sp" />
	            <ImageView 
	                android:id="@+id/score_star"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dp"
	                android:background="@drawable/three_stars" />
	            
	            <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginTop="3dp"
	                android:orientation="horizontal">
	                
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:paddingLeft="6dp"
	                    android:text="微信号："
	                    android:textSize="16sp" />
	                <TextView
	                    android:id="@+id/account_wx_no"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:textSize="16sp" />
	                
	            </LinearLayout>
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_marginTop="10dp"
		    android:background="#ebebeb" />
	    
	    <!-- 喜欢和订阅 -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:orientation="horizontal">
	        
	        <!-- 喜欢 -->
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <ImageView 
	                android:id="@+id/like"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/like_normal"/>
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dp"
	                android:text="喜欢"
	                android:textSize="18sp"/>
	            
	        </LinearLayout>
	        
	        <!-- 分割线 -->
	        <ImageView
			    android:layout_width="1dp"
			    android:layout_height="match_parent"
			    android:layout_marginTop="1dp"
			    android:background="#ebebeb"
			    android:layout_gravity="center_horizontal" />
	        
	        <!-- 订阅 -->
	        <LinearLayout 
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <ImageView 
	                android:id="@+id/subscribe"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:background="@drawable/subscribe_normal"/>
	            
	            <TextView 
	                android:id="@+id/subscribe_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="15dp"
	                android:text="订阅"
	                android:textSize="18sp"/>
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	    <!-- 分割线 -->
	    <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="20dp"
		    android:background="#f7f7f7" />
	    
	    <!-- 功能介绍 -->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <View
				    android:layout_width="50dp"
				    android:layout_height="1dp"
				    android:layout_marginRight="5dp"
				    android:background="#00bc44" />
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="功能介绍"
	                android:textColor="#000000"
	                android:textSize="18sp"/>
	            
	            <View
				    android:layout_width="50dp"
				    android:layout_height="1dp"
				    android:layout_marginLeft="5dp"
				    android:background="#00bc44" />
	            
	        </LinearLayout>
	        
	        <TextView 
	            android:id="@+id/function_introduction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="15dp"
                android:text="功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍"
                android:textSize="16sp"/>
	        
	    </LinearLayout>
	    
	    <!-- 分割线 -->
	    <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="20dp"
		    android:background="#f7f7f7" />
	    
	    <!-- 认证信息-->
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	         android:paddingTop="10dp"
	        android:orientation="vertical">
	        
	        <LinearLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:orientation="horizontal">
	            
	            <View
				    android:layout_width="50dp"
				    android:layout_height="1dp"
				    android:layout_marginRight="5dp"
				    android:background="#00bc44" />
	            
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="认证信息"
	                android:textColor="#000000"
	                android:textSize="18sp"/>
	            
	            <View
				    android:layout_width="50dp"
				    android:layout_height="1dp"
				    android:layout_marginLeft="5dp"
				    android:background="#00bc44" />
	            
	        </LinearLayout>
	        
	        <TextView 
	            android:id="@+id/authentication_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_marginLeft="5dp"
                android:text="功能介绍功能介绍功能介绍功能介绍功能介绍功能介绍介绍功能介绍功能介绍功能介绍功能介绍功能介绍"
                android:textSize="16sp"/>
	        
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
		    <TextView 
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:padding="15dp"
	              android:text="网址"
	              android:textColor="#000000"
	              android:textSize="18sp"/>
	    </RelativeLayout>
	    
	</LinearLayout>

</RelativeLayout>
